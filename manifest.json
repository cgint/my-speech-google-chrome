{
  "manifest_version": 3,
  "name": "Speech Loop (on-device)",
  "version": "0.1.0",
  "description": "STT → AI → TTS loop using Chrome built-in Prompt API (Gemini Nano) and chrome.tts.",
  "minimum_chrome_version": "138",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Speech Loop"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": ["sidePanel", "tts", "activeTab", "scripting"],
  "optional_host_permissions": ["http://*/*", "https://*/*"],

  "trial_tokens": []
}
